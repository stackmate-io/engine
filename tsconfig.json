{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "importHelpers": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "paths": {
      "@stackmate/engine/*": [
        "./src/*"
      ]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "../tests/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
